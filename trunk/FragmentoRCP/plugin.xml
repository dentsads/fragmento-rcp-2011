<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="FragmentoRCP.FragmentoCategory"
            class="fragmentorcp.views.RepositoryView"
            icon="icons/favicon.ico"
            id="FragmentoRCP.RepositoryView"
            name="Repository View"
            restorable="true">
      </view>
      <category
            id="FragmentoRCP.FragmentoCategory"
            name="Fragmento">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:FragmentoRCP.RepositoryView">
         <command
               commandId="fragmentorcp.commands.openOptionsCommand"
               icon="icons/toolbar_options.png"
               label="Options"
               style="push"
               tooltip="options">
            <parameter
                  name="FragmentoRCP.WizardParameter"
                  value="TOOLBAR_OPTIONS">
            </parameter>
         </command>
         <separator
               name="FragmentoRCP.separator1"
               visible="true">
         </separator>
         <command
               commandId="fragmentorcp.commands.openOptionsCommand"
               icon="icons/toolbar_plus.png"
               label="createNewItem"
               style="push"
               tooltip="create new item">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="FragmentoRCP.active">
                  <equals
                        value="ENABLED">
                  </equals>
               </with>
            </visibleWhen>
            <parameter
                  name="FragmentoRCP.WizardParameter"
                  value="TOOLBAR_CREATE_NEW_ITEM">
            </parameter>
         </command>
         <separator
               name="FragmentoRCP.separator1">
         </separator>
         <command
               commandId="fragmentorcp.commands.openOptionsCommand"
               icon="icons/toolbar_delete.png"
               label="delete"
               style="push"
               tooltip="delete">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="FragmentoRCP.active">
                  <equals
                        value="ENABLED">
                  </equals>
               </with>
            </visibleWhen>
         </command>
         <separator
               name="FragmentoRCP.separator2"
               visible="true">
         </separator>
         <command
               commandId="fragmentorcp.commands.openOptionsCommand"
               icon="icons/toolbar_search.png"
               label="search"
               style="push"
               tooltip="search">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="FragmentoRCP.active">
                  <equals
                        value="ENABLED">
                  </equals>
               </with>
            </visibleWhen>
            <parameter
                  name="FragmentoRCP.WizardParameter"
                  value="TOOLBAR_SEARCH">
            </parameter>
         </command>
         <separator
               name="FragmentoRCP.separator3"
               visible="true">
         </separator>
         <command
               commandId="fragmentorcp.commands.openOptionsCommand"
               icon="icons/toolbar_expand.gif"
               label="expandAll"
               style="push"
               tooltip="expand all">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="FragmentoRCP.active">
                  <equals
                        value="ENABLED">
                  </equals>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="fragmentorcp.commands.openOptionsCommand"
               icon="icons/toolbar_collapse.gif"
               label="collapseAll"
               style="push"
               tooltip="collapse all">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="FragmentoRCP.active">
                  <equals
                        value="ENABLED">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="fragmentorcp.commands.openOptionsCommandHandler"
            id="fragmentorcp.commands.openOptionsCommand"
            name="openOptionsCommand">
         <commandParameter
               id="FragmentoRCP.WizardParameter"
               name="Wizard selection parameter"
               optional="false">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="fragmentorcp.commands.openOptionsCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="fragmentorcp.preferences.servicePreference"
            id="FragmentoRCP.servicePreference"
            name="Service Preference">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="fragmentorcp.wizards.CreateWizard"
            id="FragmentoRCP.CreateWizard"
            name="Create new wizard">
      </wizard>
      <wizard
            class="fragmentorcp.wizards.pages.OpenOptionsPage"
            icon="icons/favicon.ico"
            id="FragmentoRCP.OpenOptionsPage"
            name="openOptions Page 1">
      </wizard>
      <wizard
            class="fragmentorcp.wizards.pages.OpenOptionsPage2"
            id="FragmentoRCP.OpenOptionsPage2"
            name="openOptions Page 2">
      </wizard>
      <wizard
            class="fragmentorcp.wizards.pages.CreateNewItemPage"
            id="FragmentoRCP.CreateNewItem"
            name="create new item">
      </wizard>
      <wizard
            class="fragmentorcp.wizards.pages.SerachWizardPage1"
            id="FragmentoRCP.SearchWizardPage1"
            name="Search Wizard Page 1">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="fragmentorcp.sourceprovider.CommandState">
         <variable
               name="FragmentoRCP.active"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
